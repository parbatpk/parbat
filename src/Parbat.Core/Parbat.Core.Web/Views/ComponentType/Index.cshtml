@model IEnumerable<Parbat.Core.API.Client.ComponentType>

@{
    ViewData["Title"] = "Component Type";
}

<h1>Component Type</h1>

<div id="ModalPlaceHolder"></div>

<p>
    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
            data-target="#createComponentType" data-url="@Url.Action("Create", "Component Type")">
        Create
    </button>
</p>

<table class="table" id="deptList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRequired)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model is not null)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRequired)
                    </td>
                    <td>
                    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                            data-target="#editItem" data-url="@Url.Action("Edit", "Component Type", new { id = item.ComponentTypeID })">
                        Edit
                    </button>
                    |
                    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                            data-target="#deleteItem" data-url="@Url.Action("Delete", "Component Type",new { id = item.ComponentTypeID})">
                        Delete
                    </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#deptList').DataTable();
    });
</script>