@model IEnumerable<Parbat.Core.API.Client.Course>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Courses List";
}

<h1>Courses List</h1>

<div id="ModalPlaceHolder"></div>

<p>
    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
            data-target="#createCourse" data-url="@Url.Action("Create", "Course")">
        Create Course
    </button>
</p>

<table class="table" id="deptList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheoryCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LabCredit)
            </th>
            <th>
                @Html.Display("Edit")
            </th>
            <th>
                @Html.Display("Details")
            </th>
            <th>
                @Html.Display("Delete")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheoryCredit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabCredit)
                </td>
                <td>
                    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                      data-target="#editItem" data-url="@Url.Action("Edit", "Course", new { id = item.CourseID })">
                        Edit
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                      data-target="#editItem" data-url="@Url.Action("Details", "Course", new { id = item.CourseID })">
                        Details
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-link" data-toggle="ajax-modal"
                      data-target="#editItem" data-url="@Url.Action("Delete", "Course", new { id = item.CourseID })">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#deptList').DataTable();
    });
</script>